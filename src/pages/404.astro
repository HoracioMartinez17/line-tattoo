<style>
  .error-container {
    padding: 8rem 2rem;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .error-content {
    background-color: var(--background-color);
    border-radius: 10px;
    padding: 3rem 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    width: 100%;
  }
  
  .error-icon {
    margin: 0 auto 2rem;
    width: 120px;
    height: 120px;
  }
  
  h1 {
    font-family: "Canis", sans-serif;
    font-size: 6rem;
    margin: 0;
    color: var(--accent-color);
    line-height: 1.2;
  }
  
  h2 {
    font-family: "Canis", sans-serif;
    font-size: 2.5rem;
    margin: 0.5rem 0 2rem;
    color: var(--platinum);
    word-wrap: break-word;
    hyphens: auto;
    line-height: 1.2;
  }
  
  .error-message {
    font-size: 1.2rem;
    margin-bottom: 3rem;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .suggested-links {
    margin: 3rem 0;
  }
  
  .suggested-links h3 {
    font-size: 1.5rem;
    color: var(--platinum);
    margin-bottom: 2rem;
    word-wrap: break-word;
    line-height: 1.3;
  }
  
  .link-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .suggested-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    background-color: rgba(255, 255, 255, 0.05);
    padding: 1rem;
    border-radius: 8px;
    color: var(--platinum);
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .suggested-link:hover {
    background-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    color: var(--accent-color);
  }
  
  .suggested-link svg {
    flex-shrink: 0;
    stroke: var(--accent-color);
  }
  
  .action-button {
    margin-top: 3rem;
  }
  
  .btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-weight: bold;
  }

  .btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    color: var(--smoky-black-1);
  }
  
  @media (max-width: 768px) {
    .error-container {
      padding: 5rem 1rem;
    }
    
    h1 {
      font-size: 5rem;
    }
    
    h2 {
      font-size: 1.8rem;
      word-break: keep-all;
      overflow-wrap: break-word;
    }
    
    .link-grid {
      grid-template-columns: 1fr;
    }
    
    .suggested-links h3 {
      font-size: 1.3rem;
    }
  }
</style>
